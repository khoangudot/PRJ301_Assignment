<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TakeAttandanceController</servlet-name>
        <servlet-class>Controllers.Lecturer.TakeAttandanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controllers.Login.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableController</servlet-name>
        <servlet-class>Controllers.Lecturer.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimeTableController</servlet-name>
        <servlet-class>Controller.Student.StudentTimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAttenReportController</servlet-name>
        <servlet-class>Controller.Student.StudentAttenReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadSubjectsController</servlet-name>
        <servlet-class>Controller.Group.LoadSubjectsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TakeAttandanceController</servlet-name>
        <url-pattern>/lecturer/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableController</servlet-name>
        <url-pattern>/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimeTableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAttenReportController</servlet-name>
        <url-pattern>/student/attend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadSubjectsController</servlet-name>
        <url-pattern>/student/subjects</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
